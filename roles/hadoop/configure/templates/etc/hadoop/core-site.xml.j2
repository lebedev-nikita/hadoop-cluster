<configuration>
  <property>
    <name>fs.defaultFS</name>
    <value>hdfs://{{ master_host }}:{{ core_default_fs_port }}</value>
  </property>

  {% for user in [hdfs_user, hive_user] %}
    <property>
      <name>hadoop.proxyuser.{{ user }}.hosts</name>
      <value>*</value>
    </property>
    <property>
      <name>hadoop.proxyuser.{{ user }}.groups</name>
      <value>*</value>
    </property>
  {% endfor %}

  <property>
    <name>ipc.client.fallback-to-simple-auth-allowed</name>
    <value>true</value>
    <description>
      Позволяет копировать данные из незащищенного кластера в защищенный
    </description>
  </property>

  {% if use_secure_mode %}
    <property>
      <name>hadoop.security.authentication</name>
      <value>kerberos</value>
    </property>
    <property>
      <name>hadoop.security.authorization</name>
      <value>true</value>
    </property>

    <property>
      <name>hadoop.rpc.protection</name>
      <value>authentication</value>
    </property>

    <property>
      <name>hadoop.http.authentication.type</name>
      <value>kerberos</value>
    </property>
    <property>
      <name>hadoop.http.authentication.kerberos.principal</name>
      <value>HTTP/_HOST@{{ kdc_realm }}</value>
    </property>
    <property>
      <name>hadoop.http.authentication.kerberos.keytab</name>
      <value>{{ keytab_path }}</value>
    </property>
  {% endif %}
</configuration>
