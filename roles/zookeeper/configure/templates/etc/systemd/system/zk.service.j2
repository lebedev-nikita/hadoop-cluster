[Unit]
Description=Zookeeper Daemon
Documentation=http://zookeeper.apache.org
Requires=network.target
After=network.target

[Service]    
Type=forking
WorkingDirectory={{ opt_dir }}/zookeeper
User={{ zookeeper_user }}
Group={{ hadoop_user }}
ExecStart={{ opt_dir }}/zookeeper/bin/zkServer.sh    start    {{ opt_dir }}/zookeeper/conf/zoo.cfg
ExecStop={{ opt_dir }}/zookeeper/bin/zkServer.sh     stop     {{ opt_dir }}/zookeeper/conf/zoo.cfg
ExecReload={{ opt_dir }}/zookeeper/bin/zkServer.sh   restart  {{ opt_dir }}/zookeeper/conf/zoo.cfg
TimeoutSec=30
Restart=on-failure

[Install]
WantedBy=default.target
